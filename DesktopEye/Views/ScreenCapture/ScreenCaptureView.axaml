<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DesktopEye.Controls"
             xmlns:viewModels="clr-namespace:DesktopEye.ViewModels"
             Focusable="True"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopEye.Views.ScreenCapture.ScreenCaptureView"
             x:DataType="viewModels:ScreenCaptureViewModel">
    <Design.DataContext>
        <viewModels:ScreenCaptureViewModel/>
    </Design.DataContext>
    <Grid>
        <Image x:Name="ImageControl" Source="{Binding Bitmap}" Stretch="Fill" />
        <local:AreaSelectionControl SelectionRect="{Binding Selection, Mode=TwoWay}"
                                    Width="{Binding #ImageControl.Bounds.Width}"
                                    Height="{Binding  #ImageControl.Bounds.Height}" />
        <Canvas x:Name="SelectionCanvas" />
    </Grid>
</UserControl>
