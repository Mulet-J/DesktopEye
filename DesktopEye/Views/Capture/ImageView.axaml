<!--Focusable is required to handle keybindings-->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DesktopEye.Controls"
             xmlns:vm="clr-namespace:DesktopEye.ViewModels"
             mc:Ignorable="d"
             x:Class="DesktopEye.Views.Capture.ImageView"
             Focusable="True"
             x:DataType="vm:ImageViewModel">
    <Design.DataContext>
        <vm:ImageViewModel />
    </Design.DataContext>
    <Grid>
        <Image x:Name="ImageControl" Source="{Binding Bitmap}" Stretch="Fill" />
        <local:AreaSelectionControl SelectionRect="{Binding Selection, Mode=TwoWay}"
                                    Width="{Binding #ImageControl.Bounds.Width}"
                                    Height="{Binding  #ImageControl.Bounds.Height}" />
    </Grid>
</UserControl>