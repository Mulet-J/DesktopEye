<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:DesktopEye.Common.Resources"
             xmlns:screenCapture="clr-namespace:DesktopEye.Common.ViewModels.ScreenCapture"
             xmlns:design="clr-namespace:DesktopEye.Common.ViewModels.ScreenCapture.Design"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="DesktopEye.Common.Views.ScreenCapture.ScreenCaptureActionsView"
             x:DataType="screenCapture:ScreenCaptureActionsViewModel">

    <Design.DataContext>
        <design:DesignScreenCaptureActionsViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <!-- Styles pour les boutons avec thème violet -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#6200EE" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#7E3FF2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="MinHeight" Value="45" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                    <BrushTransition Property="Background" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#7E3FF2" />
            <Setter Property="RenderTransform" Value="scale(1.05)" />
        </Style>
        <Style Selector="Button.primary:pressed">
            <Setter Property="RenderTransform" Value="scale(0.95)" />
        </Style>

        <!-- Bouton de fermeture glassmorphism -->
        <Style Selector="Button.glass">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#40FFFFFF" />
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#60FFFFFF" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                    <BrushTransition Property="Background" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.glass:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#60FFFFFF" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.05)" />
        </Style>

        <!-- Styles pour les ComboBox avec thème violet -->
        <Style Selector="ComboBox.modern">
            <Setter Property="Background" Value="#2A2A2A" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#6200EE" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="MinHeight" Value="40" />
        </Style>
        <Style Selector="ComboBox.modern:pointerover">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="BorderBrush" Value="#7E3FF2" />
        </Style>

        <!-- Panel avec gradient violet -->
        <Style Selector="Border.violet-panel">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Offset="0" Color="#2A1F1F" />
                        <GradientStop Offset="1" Color="#2D2D3A" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#6200EE" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="24" />
        </Style>

        <!-- Panel glassmorphism pour les résultats -->
        <Style Selector="Border.glass-panel">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#20FFFFFF" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#30FFFFFF" />
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
        </Style>

        <!-- Styles pour les titres -->
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <!-- Styles pour les labels -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <!-- Styles pour le contenu -->
        <Style Selector="TextBlock.content">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Fond overlay transparent avec blur -->
        <Grid.Background>
            <SolidColorBrush Color="#80000000" />
        </Grid.Background>

        <!-- Conteneur principal plus grand -->
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Section principale avec image et contrôles -->
            <Grid Grid.Row="0" ColumnDefinitions="*,30,Auto">
                
                <!-- Image centrale plus grande à gauche -->
                <Border Grid.Column="0" Classes="violet-panel"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        MinWidth="700" MinHeight="500">
                    <Grid RowDefinitions="Auto,*">
                        <TextBlock Grid.Row="0" Classes="title" Text="📸 Capture d'écran" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,20" />
                        
                        <!-- Conteneur de l'image qui prend tout l'espace restant -->
                        <Border Grid.Row="1" CornerRadius="12" ClipToBounds="True" 
                                Background="#15FFFFFF" 
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                            <Image Source="{Binding Bitmap}" 
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                </Border>

                <!-- Panel des actions à droite -->
                <Border Grid.Column="2" Classes="violet-panel" VerticalAlignment="Stretch" Width="350">
                    <StackPanel Spacing="25">
                        <TextBlock Classes="title" Text="⚡ Actions" HorizontalAlignment="Center" FontSize="20" />

                        <!-- Section OCR -->
                        <StackPanel Spacing="10">
                            <TextBlock Classes="label" Text="🔍 Extraction de texte (OCR)" FontSize="14" />
                            <ComboBox Classes="modern" 
                                      ItemsSource="{Binding AvailableOcrTypes}"
                                      SelectedItem="{Binding CurrentOcrType}"
                                      HorizontalAlignment="Stretch" />
                            <Button Classes="primary" 
                                    Click="OnExtractTextClick"
                                    Content="{x:Static res:ResourcesCommon.Button_ExtractText}"
                                    HorizontalAlignment="Stretch"
                                    FontSize="15" />
                        </StackPanel>

                        <!-- Section Classification -->
                        <StackPanel Spacing="10">
                            <TextBlock Classes="label" Text="🌐 Détection de langue" FontSize="14" />
                            <ComboBox Classes="modern"
                                      ItemsSource="{Binding AvailableClassifierTypes}"
                                      SelectedItem="{Binding CurrentClassifierType}"
                                      HorizontalAlignment="Stretch" />
                            <Button Classes="primary"
                                    Click="OnInferLanguageClick"
                                    Content="{x:Static res:ResourcesCommon.Button_InferLanguage}"
                                    HorizontalAlignment="Stretch"
                                    FontSize="15" />
                        </StackPanel>

                        <!-- Section Traduction -->
                        <StackPanel Spacing="10">
                            <TextBlock Classes="label" Text="🔄 Traduction" FontSize="14" />
                            <ComboBox Classes="modern"
                                      ItemsSource="{Binding AvailableTranslationTypes}"
                                      SelectedItem="{Binding CurrentTranslationType}"
                                      HorizontalAlignment="Stretch" />
                            <TextBlock Classes="label" Text="Langue cible" FontSize="12" />
                            <ComboBox Classes="modern"
                                      ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding TargetLanguage}"
                                      HorizontalAlignment="Stretch" />
                            <Button Classes="primary"
                                    Click="OnTranslateClick"
                                    Content="{x:Static res:ResourcesCommon.Button_Translate}"
                                    HorizontalAlignment="Stretch"
                                    FontSize="15" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Section des résultats en bas plus large -->
            <Border Grid.Row="1" Classes="glass-panel" Margin="0,30,0,0" 
                    HorizontalAlignment="Stretch" MinHeight="180">
                <Grid ColumnDefinitions="1*,30,1*,30,1*"
                      HorizontalAlignment="Stretch">
                    
                    <!-- Texte extrait -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Classes="title" Text="📝 Texte extrait" HorizontalAlignment="Center" FontSize="18" />
                        <Border Background="#20FFFFFF" 
                                CornerRadius="10" 
                                Padding="16"
                                MinHeight="120"
                                MaxHeight="140">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Classes="content" 
                                           Text="{Binding OcrText, FallbackValue='Aucun texte extrait pour le moment...'}"
                                           TextWrapping="Wrap"
                                           FontSize="14" />
                            </ScrollViewer>
                        </Border>
                    </StackPanel>

                    <!-- Langue détectée -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Classes="title" Text="🌍 Langue détectée" HorizontalAlignment="Center" FontSize="18" />
                        <Border Background="#20FFFFFF" 
                                CornerRadius="10" 
                                Padding="16"
                                MinHeight="120">
                            <TextBlock Classes="content" 
                                       Text="{Binding InferredLanguage, FallbackValue='Non détectée'}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       FontSize="18" />
                        </Border>
                    </StackPanel>

                    <!-- Texte traduit -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Classes="title" Text="🔄 Traduction" HorizontalAlignment="Center" FontSize="18" />
                        <Border Background="#20FFFFFF" 
                                CornerRadius="10" 
                                Padding="16"
                                MinHeight="120"
                                MaxHeight="140">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Classes="content" 
                                           Text="{Binding TranslatedText, FallbackValue='Aucune traduction disponible...'}"
                                           TextWrapping="Wrap"
                                           FontSize="14" />
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Bouton de fermeture en haut à droite -->
        <Button Classes="glass" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20" 
                Width="40" 
                Height="40"
                Click="OnCloseClick"
                Padding="0">
            <Path Data="M 8,8 L 16,16 M 8,16 L 16,8" 
                  Stroke="White" 
                  StrokeThickness="2" 
                  Stretch="Uniform"
                  Width="16" 
                  Height="16" />
        </Button>
    </Grid>
</UserControl>