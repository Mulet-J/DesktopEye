<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels1="clr-namespace:DesktopEye.Common.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopEye.Common.Views.ScreenCapture.ScreenCaptureActionsView"
             x:DataType="viewModels1:ScreenCaptureActionsViewModel">
    <Grid RowDefinitions="*,*,*,*">
        <Image Grid.Row="0" Source="{Binding Bitmap}" />
        <TextBlock Grid.Row="1" Text="{Binding OcrText}" />
        <TextBlock Grid.Row="2" Text="{Binding InferredLanguage}" />
        <TextBlock Grid.Row="3" Text="{Binding TranslatedText}" />
    </Grid>
</UserControl>