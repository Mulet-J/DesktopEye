        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:screenCapture="clr-namespace:DesktopEye.Common.Views.ScreenCapture"
        xmlns:viewModels="clr-namespace:DesktopEye.Common.ViewModels.ScreenCapture"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="800"
        x:Class="DesktopEye.Common.Views.ScreenCapture.ScreenCaptureActionsWindow"
        x:DataType="viewModels:ScreenCaptureActionsViewModel"
        Title="Desktop Eye - Actions"
        Icon="/Assets/avalonia-logo.ico"
        Width="1400" Height="800"
        MinWidth="1200" MinHeight="700"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        WindowState="Maximized">
